.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Bootstrap theme
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if(nav === "home")
              li.active
                a(href='/') Home
            else
              li
                a(href='/') Home
            if(nav === 'clients')
              li.active
                a(href='/clients') Clientes
            else
              li
                a(href='/clients') Clientes
            li
              a(href='#contact') Contact
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Dropdown
                b.caret
              ul.dropdown-menu
                li
                  a(href='#') Action
                li
                  a(href='#') Another action
                li
                  a(href='#') Something else here
                li.divider
                li.dropdown-header Nav header
                li
                  a(href='#') Separated link

          if(logged)        
            form.navbar-form.navbar-right(role='form', action='/logout', method='post')
              .form-group
                a.username #{user}
              .form-group
                button.btn.btn-default.btn-sm(type='submit', alt='Cerrar Session')
                  span.glyphicon.glyphicon-log-out
          else
            form.navbar-form.navbar-right(role='form', action='/', method="post")
              .form-group
                input#email.form-control(name='email', type='email', placeholder='Email', required)
              .form-group
                input#password.form-control(name='password', type='password', placeholder='Password', required)
              button.btn.btn-success(type='submit') Sign in
